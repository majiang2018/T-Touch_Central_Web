@model DATA.model.Tab_Department
@{
    ViewBag.Title = "新建";
}

<h2>新建</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <h4>&nbsp;&nbsp;&nbsp;部门信息</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("序号", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <input id="department_num" type="text" name="department_num" required class="form-control" value="@ViewBag.Message">
                @Html.ValidationMessageFor(model => model.department_num, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("部门名", htmlAttributes: new { @class = "control-label col-md-1" })
            <font size="5" color="red" class="control-label col-md-1">*</font>
            <div class="col-md-4">
                <input id="department_name" type="text" name="department_name" required class="form-control">
                @Html.ValidationMessageFor(model => model.department_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("备注", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.remark, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.remark, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <br />
        <div class="form-group">
            <div>
                <input type="submit" value="新建" class="btn btn-default" />
            </div>
        </div>
}

<div>
    @Html.ActionLink("返回", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
