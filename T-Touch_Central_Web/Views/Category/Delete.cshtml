@model DATA.model.Category
@{
    ViewBag.Title = "删除";
}

<h2>删除</h2>

<h3>您确定要删除吗?</h3>

<div>
    <h4>分类信息</h4>
    <hr />
    <dl class="dl-horizontal">
       
        <dt>
            @Html.DisplayName("序号")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.category_num)
        </dd>

        <dt>
            @Html.DisplayName("类别名称")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.category_name)
        </dd>

        <dt>
            @Html.DisplayName("图片")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.image)
        </dd>
        <dt>
            @Html.DisplayName("描述")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.describ)
        </dd>

        <dt>
            @Html.DisplayName("顺序")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.order_index)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="删除" class="btn btn-default" /> |
            @Html.ActionLink("返回", "Index")
        </div>
    }
</div>
