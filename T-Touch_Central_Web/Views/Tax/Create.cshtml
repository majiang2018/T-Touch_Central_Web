@model DATA.model.Tab_Tax
@{
    ViewBag.Title = "新建";
}

<h2>新建</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="row">
        <h4>&nbsp;&nbsp;&nbsp;税率信息</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("序号", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <input id="tax_num" type="text" name="tax_num" required class="form-control" value="@ViewBag.Message">
                @Html.ValidationMessageFor(model => model.tax_num, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("税率名", htmlAttributes: new { @class = "control-label col-md-1" })
            <font size="5" color="red" class="control-label col-md-1">*</font>
            <div class="col-md-4">
                <input id="tax_name" type="text" name="tax_name" required class="form-control">
                @Html.ValidationMessageFor(model => model.tax_name, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            @Html.Label("税率值", htmlAttributes: new { @class = "control-label col-md-1" })
            <font size="5" color="red" class="control-label col-md-1">*</font>
            <div class="col-md-4">
                <input id="tax_value" type="text" name="tax_value" required class="form-control">
                @Html.ValidationMessageFor(model => model.tax_value, "", new { @class = "text-danger" })
            </div>
            <font size="3" class="control-label col-md-1">%</font>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div>
            <input type="submit" value="新建" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}